<IfModule mod_rewrite.c>
 
    RewriteEngine on
 
    RewriteRule ^([a-z]+)\/([0-9]+)\/?$ api.php?param=$1&param2=$2 [NC]
     
    RewriteRule ^([a-z]+)\/?$ $1.php [NC]
     
    RewriteRule ^([0-9]+)\/?$ api.php?param=$1 [NC]
     
    RewriteRule ^([0-9_]+)\/?$ api.php?param=$1 [NC]

      RewriteRule ^([a-z]+)\/([0-9]+)\/?$ login.php?param=$1&param2=$2 [NC]
     
    RewriteRule ^([a-z]+)\/?$ $1.php [NC]
     
    RewriteRule ^([0-9]+)\/?$ login.php?param=$1 [NC]
     
    RewriteRule ^([0-9_]+)\/?$ login.php?param=$1 [NC]
     
</IfModule>